<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whatsapp mini</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <h3>All Chats</h3>
    <form action="/chats/new" method="get">
      <button>New Chat</button>
    </form>
    <br />
    <% for(let chat of chats){%>
    <div class="chat">
      <p><i>From :<%= chat.from %></i></p>
      <div class="msg">
        <p><%= chat.msg %></p>
        <form action="/chats/<%= chat._id %>/edit" method="get">
          <button>Edit</button>
        </form>
        <br />
        <form action="/chats/<%= chat._id %>?_method=DELETE" method="post">
          <button onclick="popup()">Delete</button>
        </form>
      </div>
      <p><i>Received By :<%= chat.to %></i></p>
      <hr />
      <p>Time : <%= chat.created_at.toString().split(" ")[4] %></p>
      <p>
        Date : <%= chat.created_at.toString().split(" ").slice(0,4).join("-")%>
      </p>
    </div>
    <% }%>
    <script src="script.js"></script>
  </body>
</html>
